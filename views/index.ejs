<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js" integrity="sha512-1/RvZTcCDEUjY/CypiMz+iqqtaoQfAITmNSJY17Myp4Ms5mdxPS5UV7iOfdZoxcGhzFbOm6sntTKJppjvuhg4g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <title>Chat</title>
</head>
<body>
  <style>
    #chat {
      height: 200px;
      overflow-y: scroll;
      margin-bottom: 2rem;
      border-radius: 5px;
      border: 2px solid #ffc107;
      display: flex;
    }

    #chat1 {
      display: flex;
      width: 100%;
      height: 30%;
      border: 2px solid #000;
    }

    #chat2 {
      display: flex;
      width: 100%;
      height: 30%;
      border: 1px solid #10b7fff1;
      margin-top: 60px;
    }

    #chat p {
      position: relative;
      right: 0;
      text-align: right;
      max-width: fit-content;
      padding: 12px;
      background: #ffc107;
      border-radius: 5px;
      color: #262626;
      font-size: 0.9em;
    }

    #chat p::before {
      content: '';
      position: absolute;
      top: 0;
      right: -12px;
      width: 20px;
      height: 20px;
      background: linear-gradient(135deg, #ffc107 0%, #ffc107 50%, transparent 50%, transparent);
    }

    #chat p:nth-child(odd) {
      background: #f7da86;
      width: fit-content;
    }

    #chat p:nth-child(odd)::before {
      content: '';
      position: absolute;
      top: 0;
      right: -12px;
      width: 20px;
      height: 20px;
      background: linear-gradient(135deg, #f7da86 0%, #f7da86 50%, transparent 50%, transparent);
    }

      #chat::-webkit-scrollbar {
        width: 10px;
      }
      #chat::-webkit-scrollbar-track {
        background: #f2f2f2;
      }
      #chat::-webkit-scrollbar-thumb {
        background-color: #ffc107;
        border-radius: 20px;
      }

      #chat::-webkit-scrollbar-thumb:hover {
        background-color: #ffc107;
      }

      h1 {
        text-align: center;
        color: #ffc107;
        background-color: #ffffff;
        border: 2px solid #ffc107;
        border-radius: 5px;
      }

</style>

  <div class="container">
    <h1 class="mt-5">Chat Softh</h1>
    <div id="chat">
      <!-- <div id="chat-messages"></div> -->
      <div id="chat1">

      </div>
      <div id="chat2">

      </div>
    </div>
    <div class="box">
      <div class="card" style="width: 100%;">
        <div class="card-body d-flex justify-content-between align-items-center">
          <h5 class="fs-5 badge bg-warning m-2">Chat</h5>
          <input type="text" name="" id="msg" placeholder="Mensagem" class="form-control m-2">
          <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control m-2">
          <button onclick="enviar()" class="btn btn-outline-primary btn-sm m-2">Enviar</button>
        </div>
      </div>      
    </div>
  </div>

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js" integrity="sha512-xbQU0+iHqhVt7VIXi6vBJKPh3IQBF5B84sSHdjKiSccyX/1ZI7Vnkt2/8y8uruj63/DVmCxfUNohPNruthTEQA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  var socket = io("http://localhost:3000");

  socket.on("disconnect",() => {
    console.log("Desconectado")
  })

  socket.on("showmsg", data => {
    var chatUser = document.getElementById("chat1");
    var p = document.createElement("p");
    p.innerHTML = `${data.username}: ${data.msg}`;
    chatUser.appendChild(p);
  })

  socket.on("showmsg2", data => {
    var chatFriend = document.getElementById("chat2");
    var p = document.createElement("p");
    p.innerHTML = `${data.username}: ${data.msg}`;
    chatFriend.appendChild(p);
  })

  function enviar(){
    var msgField = document.getElementById("msg");
    var usernameField = document.getElementById("username");

    var msg = msgField.value;
    var username = usernameField.value;

    socket.emit("mensagem",{
      msg,
      username
    })
  }

</script>
</html>